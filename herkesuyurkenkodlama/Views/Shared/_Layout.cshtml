<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/lib/toastrjs/toastr.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand ml-3 d-flex align-items-center" asp-controller="Home" asp-action="Index">
            <img src="~/uploads/projelogo.png" alt="Logo" style="height: 35px; width: 35px; margin-right: 10px; filter: drop-shadow(0 0 3px white);">
            ManageMint
        </a>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item dropdown user-dropdown ms-auto">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @{
                                var profileImagePath = User.FindFirst("ProfileImagePath")?.Value ?? "uploads/no-image.jpg";
                                var timestamp = DateTime.Now.Ticks; // Her yüklemede farklı bir değer üretir
                            }
                            <img src="~/@profileImagePath?v=@timestamp" class="rounded-circle" style="height: 30px; width: 30px; margin-right: 5px;">
                        </a>

                        <div class="dropdown-menu dropdown-menu-right custom-dropdown" aria-labelledby="userDropdown">
                            <div class="dropdown-header bg-dark text-white">
                                <img src="~/@profileImagePath?v=@timestamp" alt="User Image" class="rounded-circle" style="height: 40px; width: 40px;">
                                <div>
                                    <strong>@User.FindFirst("Username").Value</strong><br>
                                </div>
                            </div>
                            <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Profile">
                                <i class="fa-solid fa-user"></i> Profil
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">
                                <i class="fa-solid fa-arrow-right-from-bracket"></i> Çıkış Yap
                            </a>
                        </div>
                    </li>

                }
            </ul>
        </div>
    </nav>

    <!-- Sidebar ve Main Content -->
    <div class="d-flex">
        <nav class="sidebar bg-light">
            <h2 class="sidebar-title">Menü</h2>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa fa-home"></i> Ana Sayfa</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Project" asp-action="UserIndex"><i class="fa fa-folder"></i> Projeler</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Team" asp-action="UserIndex"><i class="fa fa-users"></i> Takımlar</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Task" asp-action="UserIndex"><i class="fa fa-tasks"></i> Görevler</a>
                </li>

                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-cogs"></i> Admin
                            </a>
                            <div class="dropdown-menu" aria-labelledby="adminDropdown">
                                <a class="dropdown-item" asp-area="" asp-controller="User" asp-action="Index"><i class="fa fa-user"></i> Kullanıcılar</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Project" asp-action="AdminIndex"><i class="fa fa-folder"></i> Projeler</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Team" asp-action="AdminIndex"><i class="fa fa-users"></i> Takımlar</a>
                                <a class="dropdown-item" asp-area="" asp-controller="Task" asp-action="AdminIndex"><i class="fa fa-tasks"></i> Görevler</a>
                            </div>
                        </li>
                    }
                }
            </ul>
        </nav>

        <!-- Main Content -->
        <div class="main-content flex-grow-1">
            @RenderBody()
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-light py-3">
        <div class="container text-center">
            <p class="mb-0">© 2024 ManageMint</p>
        </div>
    </footer>

    <!-- Bootstrap ve gerekli JS kütüphaneleri -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/lib/toastrjs/toastr.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
