@model EditTeamModel

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-lg-6 col-md-8 col-sm-10">
        <div class="card shadow-lg p-4">
            <h2 class="text-center mb-4">Şeflik Düzenle</h2>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Takım Adı -->
                <div class="form-group mb-3">
                    <label asp-for="SubDepartmentName" class="form-label">Şeflik</label>
                    <input asp-for="SubDepartmentName" class="form-control" placeholder="Şeflik Adı" />
                    <span asp-validation-for="SubDepartmentName" class="text-danger small"></span>
                </div>

                <!-- Müdürlük -->
                <div class="form-group mb-3">
                    <label asp-for="DepartmentId" class="form-label">Müdürlük</label>
                    <div class="input-group">
                        <select asp-for="DepartmentId" class="form-select" style="width: 91%" asp-items="ViewBag.Departments">
                            <option value="">Lütfen Seçin</option>
                        </select>
                        <div class="input-group-append">
                            <span class="input-group-text">
                                <i class="fa-solid fa-building fa-fw"></i>
                            </span>
                        </div>
                    </div>
                    <span asp-validation-for="DepartmentId" class="text-danger small"></span>
                </div>

                <!-- Aktif mi? -->
                <div class="form-group mb-3">
                    <div class="form-check form-switch">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" id="isActiveSwitch">
                        <label class="form-check-label" for="isActiveSwitch">Aktif mi?</label>
                    </div>
                    <span asp-validation-for="IsActive" class="text-danger small"></span>
                </div>

                <!-- Kaydet Butonu -->
                <div class="form-group mb-3 text-center">
                    <button type="submit" class="btn btn-primary btn-lg w-100">
                        <i class="fa-solid fa-save me-2 mr-1"></i>Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

