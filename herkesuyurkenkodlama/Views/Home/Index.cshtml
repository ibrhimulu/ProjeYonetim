@{
    ViewData["Title"] = "Ana Sayfa";
}

<header class="welcome-section bg-primary text-white text-center py-5">
    <div class="container">
        <h1 class="display-4">Hoşgeldiniz @User.FindFirst("Username").Value!</h1>
        <p class="lead">Proje ve görevlerinizi kolayca yönetin, takım arkadaşlarınızla iş birliği yapın ve işlerinizi takip edin.</p>
    </div>
</header>

<section class="features-section py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <i class="fa fa-tasks fa-4x mb-3 text-dark"></i>
                        <h5 class="card-title">Görev Yönetimi</h5>
                        <p class="card-text">Görevlerinizi kolayca oluşturun, düzenleyin ve yönetin.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <i class="fa fa-users fa-4x mb-3 text-dark"></i>
                        <h5 class="card-title">Takım İşbirliği</h5>
                        <p class="card-text">Takım arkadaşlarınızla iş birliği yapın ve iletişimde kalın.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <i class="fa fa-chart-line fa-4x mb-3 text-dark"></i>
                        <h5 class="card-title">İlerleme Takibi</h5>
                        <p class="card-text">Projelerinizin ve görevlerinizin ilerlemesini takip edin.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
