@model List<ProjectViewModel>

@{
    ViewData["Title"] = "Projeler";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="d-flex justify-content-between mb-3">
        <a asp-action="Create" class="btn btn-primary btn-sm"><i class="fa fa-plus me-2 mr-1"></i>Yeni Proje</a>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-bordered table-hover table-sm">
                <thead class="table-light">
                    <tr>
                        <th>Proje Adı</th>
                        <th>Açıklama</th>                        
                        <th>Müdürlük</th>
                        <th>Şeflik</th>
                        <th>Aktiflik</th>
                        <th>Oluşturma Tarihi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var project in Model)
                    {
                        <tr>
                            <td>@project.ProjectName</td>
                            <td>@project.Description</td>                            
                            <td>
                                @switch (project.DepartmentId)
                                {
                                    case 1:
                                        <span>Bilgi İşlem Daire Başkanlığı</span>
                                        ; break;
                                    case 2:
                                        <span>Garaj</span>
                                        ; break;
                                    case 3:
                                        <span>İnsan Kaynakları</span>
                                        ; break;
                                    default:
                                        <span>-</span>
                                        ; break;
                                }
                            </td>
                            <td>
                                @switch (project.SubDepartmentId)
                                {
                                    case 1:
                                        <span>Yazılım</span>
                                        ; break;
                                    case 2:
                                        <span>Donanım</span>
                                        ; break;
                                    case 3:
                                        <span>İşe Alım</span>
                                        ; break;
                                    default:
                                        <span>-</span>
                                        ; break;
                                }
                            </td>
                            <td>
                                @if (project.IsActive==true)
                                {
                                    <span class="text-success"><i class="fa fa-check"></i> Aktif</span>
                                }
                                else
                                {
                                    <span class="text-danger"><i class="fa fa-times"></i> Pasif</span>
                                }
                            </td>
                            <td>@project.CreatedAt</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@project.ProjectId" class="btn btn-info btn-sm text-white"><i class="fa fa-edit"></i> Düzenle</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
