@model EditHeadshipModel

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-lg-6 col-md-8 col-sm-10">
        <div class="card shadow-lg p-4">
            <h2 class="text-center mb-4">Şeflik Düzenle</h2>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Müdürlük adı -->
                <div class="form-group mb-3">
                    <label asp-for="DepartmanName" class="form-label">Müdürlük Adı</label>
                    <input asp-for="DepartmanName" class="form-control" placeholder="Müdürlük Adı" />
                    <span asp-validation-for="DepartmanName" class="text-danger small"></span>
                </div>

                <!-- Aktif mi? -->
                <div class="form-group mb-3">
                    <div class="form-check form-switch">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" id="isActiveSwitch">
                        <label class="form-check-label" for="isActiveSwitch">Aktif mi?</label>
                    </div>
                    <span asp-validation-for="IsActive" class="text-danger small"></span>
                </div>

                <!-- Kaydet Butonu -->
                <div class="form-group mb-3 text-center">
                    <button type="submit" class="btn btn-primary btn-lg w-100">
                        <i class="fa-solid fa-save me-2 mr-1"></i>Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
