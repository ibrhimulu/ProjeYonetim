@model List<HeadshipViewModel>

@{
    ViewData["Title"] = "Müdürlükler";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="d-flex justify-content-between mb-3">
        <a asp-action="Create" class="btn btn-primary btn-sm"><i class="fa fa-plus me-2 mr-1"></i>Yeni Müdürlük</a>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped table-bordered table-hover table-sm">
                <thead class="table-light">
                    <tr>
                        <th>Müdürlük Adı</th>
                        <th>Aktiflik</th>
                        <th>İşlemler</th> <!-- İşlemler sütunu eklendi -->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var headship in Model)
                    {
                        <tr>
                            <td>@headship.DepartmanName</td>
                            <td>
                                @if (headship.IsActive == true)
                                {
                                    <span class="text-success"><i class="fa fa-check"></i> Aktif</span>
                                }
                                else
                                {
                                    <span class="text-danger"><i class="fa fa-times"></i> Pasif</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@headship.DepartmentId" class="btn btn-info btn-sm text-white"><i class="fa fa-edit"></i> Düzenle</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
