@model CreateHeadshipModel

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-lg-6 col-md-8 col-sm-10">
        <div class="card shadow-lg p-4">
            <h2 class="text-center mb-4">Şeflik Oluştur</h2>
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>                
                

                <!-- Müdürlük adı -->              
                <div class="form-group mb-3">
                    <label asp-for="DepartmanName" class="form-label">Müdürlük Adı</label>
                    <input asp-for="DepartmanName" class="form-control" placeholder="Müdürlük Adı" />
                    <span asp-validation-for="DepartmanName" class="text-danger small"></span>
                </div>


                <!-- Kaydet Butonu -->
                <div class="form-group mb-3 text-center">
                    <button type="submit" class="btn btn-primary btn-lg w-100">
                        <i class="fa-solid fa-save me-2 mr-1"></i>Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

