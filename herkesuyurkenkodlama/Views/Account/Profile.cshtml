@{
    ViewData["Title"] = "Profil";
}

<div class="container mt-5">
    <h2 class="mb-4">Profil Bilgileri</h2>
    <div class="validation-summary-container">
        <div asp-validation-summary="All" class="text-danger small"></div>
    </div>



    <div class="row">
        <!-- Profil Fotoğrafı -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <!-- Mevcut profil fotoğrafı -->
                    <img src="~/uploads/@ViewData["ProfileImagePath"]" alt="" class="img-fluid rounded-circle mb-3" style="width: 150px; height: 150px;">
                    <h4>John Doe</h4>

                    <!-- Profil fotoğrafı değiştirme formu -->
                    <form method="post" enctype="multipart/form-data" asp-action="ChangeProfilePhoto">
                        <div class="form-group">
                            <label for="profilePhoto">Yeni Profil Fotoğrafı Seç</label>
                            <input type="file" class="form-control-file" id="profilePhoto" name="profilePhoto">
                        </div>
                        <div class="form-group text-center">
                            <img id="previewImage" src="#" alt="Önizleme" class="img-fluid rounded-circle" style="display:none; max-width: 150px; height: 150px;">
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Fotoğrafı Güncelle</button>
                    </form>
                </div>
            </div>
        </div>


        <!-- Profil Bilgileri -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form method="post" asp-action="ProfileChangeNameSurname">
                        <div class="form-group">
                            <label for="firstName" class="font-weight-bold">Ad Soyad</label>
                            <input type="text" class="form-control" id="firstName" placeholder="Adınızı girin" value="@ViewData["NameSurname"]">
                        </div>
                        <div class="form-group">
                            <label for="password" class="font-weight-bold">Şifre</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="password" placeholder="Şifrenizi girin">
                                <div class="input-group-append">
                                    <span class="input-group-text">
                                        <i class="fa fa-eye" id="togglePassword" style="cursor: pointer;"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Bilgileri Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Şifre göster/gizle özelliği
    const togglePassword = document.querySelector('#togglePassword');
    const password = document.querySelector('#password');

    togglePassword.addEventListener('click', function () {
        // Şifre inputunun tipini değiştir
        const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
        password.setAttribute('type', type);

        // Göz simgesini değiştir
        this.classList.toggle('fa-eye-slash');
    });

    // Profil fotoğrafı önizleme
    $("#profilePhoto").change(function () {
        var reader = new FileReader();
        reader.onload = function (e) {
            $('#previewImage').attr('src', e.target.result);
            $('#previewImage').show();
        }
        reader.readAsDataURL(this.files[0]);
    });
</script>
