@{
    ViewData["Title"] = "Profil";
}

    <div class="container mt-5">
        <h2>Profil Bilgileri</h2>
        <div class="row">
            <!-- Profil Fotoğrafı -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        <img src="path/to/current-image.jpg" alt="Profil Fotoğrafı" class="img-fluid rounded-circle mb-3" style="width: 150px; height: 150px;">
                        <h4>John Doe</h4>
                    <button class="btn btn-primary mt-3" data-toggle="modal" data-target="#changePhotoModal" data-backdrop="false">Profil Fotoğrafını Değiştir</button>

                    </div>
                </div>
            </div>

            <!-- Profil Bilgileri -->
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <form>
                            <div class="form-group">
                                <label for="firstName">Ad Soyad</label>
                                <input type="text" class="form-control" id="firstName" placeholder="Adınızı girin" value="John Doe">
                            </div>                            
                            <div class="form-group">
                                <label for="password">Şifre</label>
                                <input type="password" class="form-control" id="password" placeholder="Şifrenizi girin">
                            </div>
                            <div class="form-group">
                                <label for="confirmPassword">Şifreyi Onaylayın</label>
                                <input type="password" class="form-control" id="confirmPassword" placeholder="Şifrenizi tekrar girin">
                            </div>
                            <button type="submit" class="btn btn-primary">Bilgileri Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Profil Fotoğrafını Değiştirme Modal -->
    <div class="modal fade" id="changePhotoModal" tabindex="-1" aria-labelledby="changePhotoModalLabel" aria-hidden="true">
    <div class="modal-dialog" style="margin-top: 100px;">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="changePhotoModalLabel">Profil Fotoğrafını Değiştir</h5>
                    <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="profilePhoto">Yeni Profil Fotoğrafı Seç</label>
                            <input type="file" class="form-control-file" id="profilePhoto">
                        </div>
                        <div class="form-group text-center">
                            <img id="previewImage" src="#" alt="Önizleme" class="img-fluid rounded-circle" style="display:none; max-width: 150px; height: 150px;">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                    <button type="button" class="btn btn-primary">Fotoğrafı Kaydet</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Profil fotoğrafı önizleme
        $("#profilePhoto").change(function () {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#previewImage').attr('src', e.target.result);
                $('#previewImage').show();
            }
            reader.readAsDataURL(this.files[0]);
        });
    </script>


