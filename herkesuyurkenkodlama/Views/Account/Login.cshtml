@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yap</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
    <style>
        /* Global Styles */
        body {
            background: linear-gradient(to right, #007bff, #6c757d);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #fff;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
            position: relative;
        }

        .card {
            background-color: #ffffff;
            border-radius: 15px;
            box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.1);
            padding: 30px;
        }

        .card-title {
            color: #343a40;
            font-size: 1.8rem;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 25px;
            padding: 15px;
            font-size: 1rem;
        }

            .form-control:focus {
                border-color: #007bff;
                box-shadow: 0px 0px 5px rgba(0, 123, 255, 0.5);
            }

        .btn-primary {
            background-color: #007bff;
            border: none;
            border-radius: 25px;
            padding: 10px 20px;
            font-size: 1rem;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .form-label {
            color: #343a40;
            font-weight: bold;
        }

        .input-group-text {
            background-color: #f8f9fa;
            border-radius: 25px;
            border: none;
            font-size: 1.2rem;
            color: #6c757d;
        }

        .input-group {
            margin-bottom: 2.5rem; /* Spacing between input fields */
        }

        .text-danger {
            font-size: 0.875rem;
            padding-top: 0.25rem;
        }

        .home-button {
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            font-size: 0.9rem;
            color: #fff;
            background-color: transparent;
            border: none;
            text-decoration: underline;
            transition: color 0.3s ease;
        }

            .home-button:hover {
                color: #ddd;
            }

        .register-link {
            margin-top: 1rem;
            font-size: 0.9rem;
            text-align: center;
        }

            .register-link a {
                color: #007bff;
                text-decoration: none;
                font-weight: bold;
                transition: color 0.3s ease;
            }

                .register-link a:hover {
                    color: #0056b3;
                }
    </style>
</head>
<body>   
    <!-- Login Form -->
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="row w-100">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title text-center">Giriş Yap</h3>
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                            <div class="mb-3">
                                <label class="form-label" for="username">
                                    <i class="fas fa-user"></i> Kullanıcı Adı
                                </label>
                                <input type="text" asp-for="Username" class="form-control" id="username" name="username" placeholder="Kullanıcı adınızı girin">
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="password">
                                    <i class="fas fa-lock"></i> Şifre
                                </label>
                                <input type="password" asp-for="Password" class="form-control" id="password" name="password" placeholder="Şifrenizi girin">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
                        </form>

                        <!-- Üye Olma Bağlantısı -->
                        <div class="register-link">
                            <p style="color:black">Üye değil misiniz? <a asp-area="" asp-controller="Account" asp-action="Register">Üye olun</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap ve gerekli JS kütüphaneleri -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</body>
</html>
